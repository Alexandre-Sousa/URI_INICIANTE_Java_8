import java.util.Scanner;

public class Main {
	public static void main (String[] args) {
		Scanner type = new Scanner (System.in);
		String name = type.next();
		double salary = type.nextDouble();
		double sales = type.nextDouble();
		double total = (sales * 0.15) + salary;
		System.out.format("TOTAL = R$ %.2f%n", total);
		type.close();
	}
}
