import java.util.Scanner;

public class Main {
	
	public static void main (String[] args) {
	
		Scanner type = new Scanner (System.in);
		
		int value, i, count = 0;
		
		for (i = 0; i < 5; i++) {
			
			value = type.nextInt();
			if (value % 2 == 0) {
				count++;
			}
			
		}
		
		System.out.println(count + " valores pares");
		
		type.close();
		
	}
	
}
